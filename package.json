        "type": "git",
        "url": "https://github.com/aimfreet/tilda-components.git"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "husky": "^8.0.3",
        "nodemon": "^2.0.2",
        "token-transformer": "^0.0.32"
    },
    "devDependencies": {
        "sass": "^1.45.0",
        "style-dictionary": "^3.7.2"
    }
}
